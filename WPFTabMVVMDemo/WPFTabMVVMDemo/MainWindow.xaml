<Window x:Class="WPFTabMVVMDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTabMVVMDemo"
       xmlns:view="clr-namespace:WPFTabMVVMDemo.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary Source="ViewTemplate.xaml"></ResourceDictionary>
    </Window.Resources>
    <TabControl ItemsSource="{Binding TabList}" SelectedIndex="0">
        <TabControl.ItemTemplate>
            <DataTemplate>
                <ContentPresenter Content="{Binding HeaderName}"></ContentPresenter>
            </DataTemplate>
        </TabControl.ItemTemplate>
    </TabControl>
</Window>
