<Window x:Class="ControlInternalDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlInternalDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" LayoutUpdated="Window_LayoutUpdated" MouseMove="Window_MouseMove">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Width="180" Height="38" Content="按钮1" Style="{StaticResource ButtonStyle}" Name="button" Click="button_Click"></Button>

        <ListBox Grid.Column="1" Margin="0,0,0,30" Name="listbox">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel>
                        <Label Content="{Binding Id}"></Label>
                        <Label Content="{Binding Name}" FontWeight="Bold" FontSize="13" Margin="10,0,0,0"></Label>
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Label Name="lbl_Display" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Column="0" Grid.ColumnSpan="2"></Label>
    </Grid>
</Window>
