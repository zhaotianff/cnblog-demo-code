<Window x:Class="WPFPosDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFPosDemo"
        mc:Ignorable="d"
        Title="MainWindow" Name="window" Height="750" Width="950" MouseMove="Window_MouseMove" Background="Silver" LayoutUpdated="Window_LayoutUpdated">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>

        <Grid Name="grid" Margin="50" Background="White">
            <!--信息显示-->
            <Label Content="Window" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Foreground="White" Margin="-50,-50,0,0"></Label>
            <Label Content="Grid1" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20"></Label>

            <Canvas Name="canvas" Width="400" Height="400" Background="Pink">
                <!--信息显示-->
                <Label Content="Canvas" FontSize="20" Foreground="White"></Label>
                <Label Content="Image" FontSize="20" Foreground="White" Canvas.Left="50" Canvas.Top="50" Panel.ZIndex="1"></Label>

                <Image Name="image" Width="300" Height="300" Canvas.Left="50" Canvas.Top="50" Source="1.jpg" Stretch="UniformToFill"></Image>

            </Canvas>
        </Grid>

        <Grid Name="grid2" Margin="0,50,50,50" Background="White" Grid.Column="1">
            <!--信息显示-->
            <Label Content="Grid2" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20"></Label>
            <Label Content="Rect" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20" Foreground="White" Panel.ZIndex="1" Margin="20,0,0,0"></Label>

            <Rectangle Name="rect" Width="80" Height="80" Fill="Pink"></Rectangle>
        </Grid>
    </Grid>
</Window>
