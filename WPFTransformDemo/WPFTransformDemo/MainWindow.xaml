<Window x:Class="WPFTransformDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTransformDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1200" WindowStartupLocation="CenterScreen">
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid>
            <Border Grid.Row="1" BorderThickness="1" BorderBrush="Black" VerticalAlignment="Center">
                <StackPanel>
                    <Label Content="未进行变换 图像宽=200 高=150"></Label>
                    <Image Source="img.jpg" Height="200" Width="150"></Image>
                </StackPanel>
            </Border>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border BorderThickness="1" BorderBrush="Black" >
                <StackPanel>
                    <Label Content="RotateTransform Angle=90 CenterX=75 CenterY=100"></Label>
                    <Image Source="img.jpg" Height="200" Width="150">
                        <Image.RenderTransform>
                            <!--旋转中心点75,100-->
                            <!--角度：90度-->
                            <RotateTransform Angle="90" CenterX="75" CenterY="100"></RotateTransform>
                        </Image.RenderTransform>
                    </Image>
                </StackPanel>
            </Border>

            <Border BorderThickness="1" BorderBrush="Black" Grid.Row="1">
                <StackPanel>
                    <Label Content="ScaleTransform ScaleX=0.8 ScaleY=0.8 CenterX=75 CenterY=100"></Label>
                    <Image Source="img.jpg" Height="200" Width="150">
                        <Image.RenderTransform>
                            <!--缩放中心点是75，100-->
                            <!--水平缩放0.8 垂直缩放0.7-->
                            <ScaleTransform ScaleX="0.8" ScaleY="0.8" CenterX="75" CenterY="100"></ScaleTransform>
                        </Image.RenderTransform>
                    </Image>
                </StackPanel>
            </Border>

            <Border BorderThickness="1" BorderBrush="Black" Grid.Row="2">
                <StackPanel>
                    <Label Content="SkewTransform AngleX=10 AngleY=10 CenterX=75 CenterY=100"></Label>
                    <Image Source="img.jpg" Height="200" Width="150">
                        <Image.RenderTransform>
                            <!--倾斜中心点是75，100-->
                            <!--水平倾斜10度 垂直倾斜10度-->
                            <SkewTransform AngleX="10" AngleY="10" CenterX="75" CenterY="100"></SkewTransform>
                        </Image.RenderTransform>
                    </Image>
                </StackPanel>
            </Border>

            <Border BorderThickness="1" BorderBrush="Black" Grid.Row="3">
                <StackPanel>
                    <Label Content="TranslateTransform X=50 Y=20"></Label>
                    <Image Source="img.jpg" Height="200" Width="150">
                        <Image.RenderTransform>
                            <!--X偏移100 Y偏移20-->
                            <TranslateTransform X="100" Y="20"></TranslateTransform>
                        </Image.RenderTransform>
                    </Image>
                </StackPanel>
            </Border>
        </Grid>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border BorderThickness="1" BorderBrush="Black" Grid.Row="0">
                <StackPanel>
                    <Label Content="ScaleTransform + TranslateTransform"></Label>
                    <Image Source="img.jpg" Height="200" Width="150">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <!--缩放中心点是75，100-->
                                <!--水平缩放0.8 垂直缩放0.7-->
                                <ScaleTransform ScaleX="0.8" ScaleY="0.8" CenterX="75" CenterY="100"></ScaleTransform>
                                <!--倾斜中心点是75，100-->
                                <!--水平倾斜10度 垂直倾斜10度-->
                                <TranslateTransform X="100" Y="20"></TranslateTransform>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                </StackPanel>
            </Border>

            <Border BorderThickness="1" BorderBrush="Black" Grid.Row="1">
                <StackPanel>
                    <Label Content="Matrix OffsetX=15 OffsetY=10 M11=1 M12=1 M21=0.1 M22=1"></Label>
                    <Image Source="img.jpg" Height="200" Width="150">
                        <Image.RenderTransform>
                            <MatrixTransform x:Name="myMatrixTransform">
                                <MatrixTransform.Matrix >
                                    <Matrix OffsetX="15" OffsetY="10" M11="1" M12="1" M21="0.1" M22="1"/>
                                </MatrixTransform.Matrix>
                            </MatrixTransform>
                        </Image.RenderTransform>
                    </Image>
                </StackPanel>
            </Border>

            <Border BorderThickness="1" BorderBrush="Black" Grid.Row="2">
                <StackPanel>
                    <Label Content="RotateTransform Angle=90 未指定中心点"></Label>
                    <Image Source="img.jpg" Height="200" Width="150">
                        <Image.RenderTransform>
                            <RotateTransform Angle="90"></RotateTransform>
                        </Image.RenderTransform>
                    </Image>
                </StackPanel>
            </Border>

            <Border BorderThickness="1" BorderBrush="Black" Grid.Row="3">
                <StackPanel>
                    <Label Content="RotateTransform Angle=90 通过RenderTransformOrigin指定中心点"></Label>
                    <Image Source="img.jpg" Height="200" Width="150" RenderTransformOrigin="0.5,0.5">
                        <Image.RenderTransform>
                            <RotateTransform Angle="90"></RotateTransform>
                        </Image.RenderTransform>
                    </Image>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
